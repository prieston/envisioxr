{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,            // ✅ Allow JavaScript files
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@prisma": ["../packages/prisma"],
      "@envisio/core/*": ["../packages/core/src/*"],
      "@envisio/ui/*": ["../packages/ui/src/*"],
      "@envisio/config/*": ["../packages/config/src/*"],
      "@envisio/engine-three/*": ["../packages/engine-three/src/*"],
      "@envisio/engine-cesium/*": ["../packages/engine-cesium/src/*"],
      "@envisio/engine-three": ["../packages/engine-three/src/index.ts"],
      "@envisio/engine-cesium": ["../packages/engine-cesium/src/index.ts"],
      "@envisio/ion-sdk": ["../packages/ion-sdk/src/index.ts"],
      "@envisio/ion-sdk/*": ["../packages/ion-sdk/src/*"]
    },
  },
  "include": [
    "next-env.d.ts",
    "env.d.ts",
    "types/**/*.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",          // ✅ Include JS files
    "**/*.jsx"          // ✅ Include JSX files
  ],
  "exclude": ["node_modules"]
}
