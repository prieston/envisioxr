{
  "name": "envisioxr",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/website",
    "apps/editor",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm dev:editor\" \"pnpm dev:website\" --names \"editor,website\" --prefix-colors \"cyan,magenta\"",
    "dev:editor": "cd apps/editor && pnpm dev",
    "dev:website": "cd apps/website && pnpm dev",
    "build": "pnpm -r build --if-present",
    "build:packages": "pnpm --filter @envisio/core build && pnpm --filter @envisio/ui build && pnpm --filter @envisio/ion-sdk build && pnpm --filter @envisio/engine-cesium build && pnpm --filter @envisio/engine-three build && pnpm --filter @envisio/config build",
    "build:editor": "pnpm build:packages && cd apps/editor && pnpm build",
    "build:website": "cd apps/website && pnpm build",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prisma:generate": "pnpm --filter @envisioxr/prisma generate",
    "prisma:migrate:deploy": "cd packages/prisma && prisma migrate deploy",
    "vercel:build:editor": "pnpm prisma:generate && pnpm build:editor",
    "vercel:build:website": "pnpm build:website",
    "postinstall": "pnpm prisma:generate"
  },
  "engines": {
    "node": ">=20 <23",
    "pnpm": ">=9"
  },
  "resolutions": {
    "next": "^14.1.0"
  },
  "dependencies": {
    "@envisio/ion-sdk": "workspace:^",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "next": "^14.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@9.12.3",
  "devDependencies": {
    "@types/node": "^20.11.30"
  }
}
