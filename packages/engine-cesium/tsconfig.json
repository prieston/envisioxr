{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "emitDeclarationOnly": false,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node"],
    "noImplicitAny": false,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@envisio/core": ["../core/dist/index"],
      "@envisio/core/*": ["../core/dist/*"],
      "@envisio/ui": ["../ui/dist/index"],
      "@envisio/ui/*": ["../ui/dist/*"],
      "@envisio/config": ["../config/dist/index"],
      "@envisio/config/*": ["../config/dist/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "**/*.js", "**/*.jsx"]
}
