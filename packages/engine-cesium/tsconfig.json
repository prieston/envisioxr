{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "emitDeclarationOnly": false,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "allowJs": false,
    "moduleResolution": "node",
    "types": ["node"],
    "noImplicitAny": false,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@envisio/core": ["../core/src/index"],
      "@envisio/core/*": ["../core/src/*"],
      "@envisio/ui": ["../ui/src/index"],
      "@envisio/ui/*": ["../ui/src/*"],
      "@envisio/config": ["../config/src/index"],
      "@envisio/config/*": ["../config/src/*"],
      "@envisio/ion-sdk": ["../ion-sdk/src/index"],
      "@envisio/ion-sdk/*": ["../ion-sdk/src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "**/*.js", "**/*.jsx"]
}
