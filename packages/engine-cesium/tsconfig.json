{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDeclarationOnly": false,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "allowJs": false,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "types": ["node"],
    "noImplicitAny": false,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@envisio/core": ["../core/dist/index"],
      "@envisio/core/*": ["../core/dist/*"],
      "@envisio/ui": ["../ui/dist/index"],
      "@envisio/ui/*": ["../ui/dist/*"],
      "@envisio/config": ["../config/dist/index"],
      "@envisio/config/*": ["../config/dist/*"],
      "@envisio/ion-sdk": ["../ion-sdk/dist/index"],
      "@envisio/ion-sdk/*": ["../ion-sdk/dist/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
