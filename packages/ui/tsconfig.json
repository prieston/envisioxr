{
  "extends": "../../tsconfig.lib.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "noEmit": true,
    "jsx": "react-jsx",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.*", "**/*.stories.*"]
}
